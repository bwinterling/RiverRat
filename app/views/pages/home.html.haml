<script src='https://api.tiles.mapbox.com/mapbox.js/v1.6.1/mapbox.js'></script>
<link href='https://api.tiles.mapbox.com/mapbox.js/v1.6.1/mapbox.css' rel='stylesheet' />

%div{:class => "wrapper"}
  %div{:class => "map-body"}
    #map{ data: { gauges: @gauges } }
  %div{:id => "sidebar"}
    %h2{:class => 'user-favorites'}
      - if current_user
        Your Favorite Rivers
        %ul.favorite-rivers
          - @favorite_rivers.each do |river|
            = river.name
            %div{:class => 'remove-favorite'}
              = button_to 'X', river_favorites_path(river.id), method: :delete

    %h2
      Rivers Near You

    %ul.rivers= render collection: @rivers, partial: "rivers/rivers"
