%header
  = image_tag 'river_rat_logo.png', {:class => "logo"}
  %div.account
    - if current_user
      %p Logged in as
      = current_user.email
      =  link_to "Logout", logout_path, {:class => "button",  :method => :get}
    - else
      = link_to "Sign Up", signup_path, {:class => "button",  :method => :get}
      = link_to "Login", login_path, {:class => "button", :method => :get}


