%header
  = link_to image_tag('river_rat_logo.png'), root_path, {:class => "logo"}
  %div.account
    - if current_user
      = link_to "Logout", logout_path, {:class => "button logout",  :method => :get}
      %p.logged-in
        Welcome back,
        = current_user.email
    - else
      = link_to "Sign Up", signup_path, {:class => "button",  :method => :get}
      = link_to "Login", login_path, {:class => "button", :method => :get}


